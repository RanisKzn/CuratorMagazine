<header  class="container">
    <MainHeader Role="@Role"></MainHeader>
    <ModalWindowEnter RoleCallback="@SetRole"></ModalWindowEnter>
    <NavBar></NavBar>
    <RoleNavBar></RoleNavBar>
    <CarouselComponent></CarouselComponent>
    <MainBody></MainBody>
